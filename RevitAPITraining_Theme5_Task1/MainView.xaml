<Window x:Class="RevitAPITraining_Theme5_Task1.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RevitAPITraining_Theme5_Task1"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="400"
        Title="Вывод данных об элементах">
    <StackPanel>
        <Label Content="Подсчет количества элементов"
               Margin="5"/>
        <Button Content="Колличество труб в проекте"
                 Margin="5" Command="{Binding PipeComand}"/>
        <Button Content="Объем всех стен в проекте"
                 Margin="5" Command="{Binding WallComand}"/>
        <Button Content="Колличество дверей в проекте"
                 Margin="5" Command="{Binding DoorCommand}"/>


    </StackPanel>
</Window>
